<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/download"
    tools:context=".chargesActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Download"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_margin="5dp"
        android:textColor="#000">
    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Where to download this application? And is there any download charges?"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_margin="5dp"
        android:textColor="#000">
    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ans:"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="70dp"
        android:textColor="#000">
    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The app is now available for download in Google Play Store and App Store. Users can enjoy the app without paying."
        android:textSize="20sp"
        android:layout_margin="5dp"
        android:textColor="#000">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="130dp">
        <ImageView
            android:id="@+id/like4"
            android:layout_width="90sp"
            android:layout_marginLeft="40dp"
            android:layout_height="90sp"
            android:background="@drawable/like"/>
        <ImageView
            android:id="@+id/dislike4"
            android:layout_width="90sp"
            android:layout_height="90sp"
            android:layout_marginLeft="170dp"
            android:background="@drawable/dislike"/>
    </LinearLayout>

</LinearLayout>